<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                tools:context=".CameraScreen">

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="370dp"/>

    <ImageButton
        android:id="@+id/camera_shot"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/camera_shot"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#ffffff" />

    <ImageButton
        android:id="@+id/camera_gallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/camera_shot"
        android:layout_marginRight="38dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:alpha=".7"
        android:src="@drawable/camera_galery"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#ffffff" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/back"
        app:tint="#ffffff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp">

        <ImageButton
            android:id="@+id/flash_toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/flash_on"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#ffffff"/>

        <ImageButton
            android:id="@+id/camera_flip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/flash_toggle"
            android:layout_marginEnd="10dp"
            android:src="@drawable/camera_flip"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#ffffff"/>

    </LinearLayout>





</RelativeLayout>
