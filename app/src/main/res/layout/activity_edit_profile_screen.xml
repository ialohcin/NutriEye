<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditProfileScreen">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Edit Profile"
                    android:textSize="25sp"
                    android:layout_gravity="center"/>

             <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:paddingLeft="28dp"
                     android:paddingRight="28dp"
                     android:layout_marginTop="15dp">

                 <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Account Details"
                         android:textStyle="bold"
                         android:textSize="18sp"/>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                         android:id="@+id/profileEmailTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         app:endIconMode="clear_text"
                         android:hint="Email Address"
                         app:errorEnabled="true"
                         app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                     <com.google.android.material.textfield.TextInputEditText
                             android:id="@+id/emailAddProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="textEmailAddress"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                         android:id="@+id/profilePasswordTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Password"
                         app:endIconMode="password_toggle"
                         app:errorEnabled="true"
                         app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                     <com.google.android.material.textfield.TextInputEditText
                             android:id="@+id/passwordProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="textPassword"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                         android:id="@+id/profileConfirmPassTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="10dp"
                         android:hint="Confirm Password"
                         app:endIconMode="password_toggle"
                         app:errorEnabled="true"
                         app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                     <com.google.android.material.textfield.TextInputEditText
                             android:id="@+id/confirmPassProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="textPassword"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Personal Details"
                         android:textStyle="bold"
                         android:textSize="18sp"/>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                         android:id="@+id/profileFirstNameTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         app:endIconMode="clear_text"
                         android:hint="First Name"
                         app:errorEnabled="true"
                         app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                     <com.google.android.material.textfield.TextInputEditText
                             android:id="@+id/firstNameProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="textPersonName"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                         android:id="@+id/profileLastNameTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Last Name"
                         app:endIconMode="clear_text"
                         app:errorEnabled="true"
                         app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                     <com.google.android.material.textfield.TextInputEditText
                             android:id="@+id/lastNameProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="textPersonName"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="2">

                     <com.google.android.material.textfield.TextInputLayout
                             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                             android:id="@+id/profileDobTextInput"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginRight="5dp"
                             android:layout_weight="1"
                             android:hint="Select DOB"
                             app:errorEnabled="true"
                             app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                         <com.google.android.material.textfield.TextInputEditText
                                 android:id="@+id/dobProfile"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:inputType="none"
                                 android:textSize="14sp"
                                 android:editable="false"/>

                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                             android:id="@+id/profileSexTextInput"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="5dp"
                             android:layout_weight="1"
                             android:hint="Select Sex"
                             app:errorEnabled="true"
                             app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                         <AutoCompleteTextView
                                 android:id="@+id/selectSexProfile"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:textSize="14sp"
                                 android:inputType="none"/>

                     </com.google.android.material.textfield.TextInputLayout>
                 </LinearLayout>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                         android:id="@+id/profileContactNumTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Contact Number"
                         app:endIconMode="clear_text"
                         app:counterEnabled="true"
                         app:counterMaxLength="10"
                         app:errorEnabled="true"
                         app:prefixText="+63"
                         app:prefixTextAppearance="@style/PrefixTextAppearance"
                         app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                     <com.google.android.material.textfield.TextInputEditText
                             android:id="@+id/contactNumProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:inputType="phone"
                             android:textSize="14sp"
                             android:maxLength="10"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Health Details"
                         android:textStyle="bold"
                         android:textSize="18sp"/>

                 <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_marginTop="10dp"
                         android:weightSum="2">

                     <com.google.android.material.textfield.TextInputLayout
                             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                             android:id="@+id/profileHeightTextInput"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginRight="5dp"
                             android:layout_weight="1"
                             android:hint="Height (cm)"
                             app:endIconMode="clear_text"
                             app:errorEnabled="true"
                             app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                         <com.google.android.material.textfield.TextInputEditText
                                 android:id="@+id/heightProfile"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:textSize="14sp"
                                 android:inputType="numberDecimal"/>

                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                             android:id="@+id/profileWeightTextInput"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="5dp"
                             android:layout_weight="1"
                             android:hint="Weight (kg)"
                             app:endIconMode="clear_text"
                             app:errorEnabled="true"
                             app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                         <com.google.android.material.textfield.TextInputEditText
                                 android:id="@+id/weightProfile"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:textSize="14sp"
                                 android:inputType="numberDecimal"/>

                     </com.google.android.material.textfield.TextInputLayout>
                 </LinearLayout>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                         android:id="@+id/profilePhyActivityTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         app:endIconMode="dropdown_menu"
                         android:hint="Physical Activity Level"
                         app:helperTextEnabled="true"
                         app:helperTextTextAppearance="@style/ErrorHelperTextAppearance"
                         app:errorEnabled="true"
                         app:errorTextAppearance="@style/ErrorHelperTextAppearance">

                     <AutoCompleteTextView
                             android:id="@+id/phyActivityLvlProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="none"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                         android:id="@+id/profileFoodAllergensTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Food Allergens"
                         app:helperText="Optional*"
                         app:helperTextTextAppearance="@style/ErrorHelperTextAppearance">

                     <AutoCompleteTextView
                             android:id="@+id/foodAllergensProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="none"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                         android:id="@+id/profileHealthConditionsTextInput"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="Health Conditions"
                         app:helperText="Optional*"
                         app:helperTextTextAppearance="@style/ErrorHelperTextAppearance">

                     <AutoCompleteTextView
                             android:id="@+id/healthConditionsProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textSize="14sp"
                             android:inputType="none"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.button.MaterialButton
                         android:id="@+id/saveChangesButton"
                         android:layout_width="wrap_content"
                         android:layout_height="60dp"
                         android:layout_gravity="center"
                         android:layout_marginBottom="30dp"
                         app:cornerRadius="32dp"
                         android:text="save changes"
                         android:backgroundTint="@color/green"/>

             </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>